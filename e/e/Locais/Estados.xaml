<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="e.Locais.Estados"
             Title="𝐄𝐬𝐭𝐚𝐝𝐨𝐬">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <Grid>
                <CollectionView x:Name="ListaEstados" SelectionMode="Single"
                    SelectionChanged="ListaEstados_SelectionChanged">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Padding="20" Spacing="5" BackgroundColor="#99c36e">
                                <Label Text="{Binding nome}" FontSize="Medium" HorizontalOptions="Center" TextColor="White" BackgroundColor="#99c36e"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>