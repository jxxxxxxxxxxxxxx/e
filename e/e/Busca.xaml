<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="e.Busca">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
            <Label Text="Pressione um botão para buscar no estado/municipio desejado" TextColor="#4d5b11"/>
            <Button Text="ONGs" Clicked="ONGs" BackgroundColor="#98af36"/>
            <Button Text="Ecopontos" Clicked="Ecopontos" BackgroundColor="#bbd840"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>